@{
}
<script src="~/js/Chart.min.js"></script>
<script>
var countArray = @Html.Raw(Json.Serialize(ViewBag.Count));
var currencyArray = @Html.Raw(Json.Serialize(ViewBag.Currencies));

	var ctx = $("#bar_chart");
	var barChart = new Chart(ctx,{
        type: 'bar',
    	data:
    	{
            labels:currencyArray,
        	datasets:
            	[{
                    label: "BarChartExample",
            	    data: countArray,
            	    borderWidth: 1
            	}]
    	},
    	options:
    	{
        	maintainAspectRatio: false,
        	scales:{xAxis:[{ticks:{beginAtZero:true}}]},
        	legend:{display:false}
    	}

	});
</script>
<div id="chart_container">
    <canvas id="bar_chart"></canvas>

</div>